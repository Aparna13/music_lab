<!doctype html>
<html>
  <head>
    <title>Edit an Artist</title>
  </head>
  <body>
    <h1>Edit</h1>
    <form action="/artists/<%=@artist[:id]%>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <input type="text" name="artist_name" value="<%=@artist[:name]%>" autofocus>
      <input type="submit" value="Save">
    </form>
  </body>
</html>
