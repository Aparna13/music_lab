<!doctype html>
<html>
  <head>
    <title>Songs for an Artist</title>
    <link rel="stylesheet" href="/styles.css" type="text/css"></link>
  </head>
  <body>
    <h1><%= @artist[:name] %>'s Songs</h1>
    <ul>
      <% @songs.each do |jam| %>
      <li>
        <span><%= jam[:title] %></span>
        <form action="songs/<%=jam[:id]%>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Remove">
        </form>
      </li>
      <% end %>
    </ul>
    <a href="songs/new">Add new song</a>
    <br><br>
    <a href="/artists">Back to all artists</a>
  </body>
</html>
